<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    
    <changeSet id="changelog-1.0" author="admin">
        <createTable tableName="course">
            <column name = "id" type="int">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="courseName" type="varchar(255)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="creditHour" type="varchar(255)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id ="changelog-1.1" author="admin">
            <renameColumn tableName="course" newColumnName="name" oldColumnName="courseName"/>
            <renameColumn tableName="course" newColumnName="credit_hour" oldColumnName="creditHour"/>
    </changeSet>
    <changeSet id="changelog-1.2" author="admin">
        <addAutoIncrement tableName="course" columnName="id"/>
    </changeSet>

    <changeSet id="changelog-1.3" author="admin">
        <modifyDataType tableName="course" columnName="credit_hour" newDataType="int"/>
    </changeSet>


</databaseChangeLog>