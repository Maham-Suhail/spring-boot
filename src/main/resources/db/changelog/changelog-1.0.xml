<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    
    <changeSet id="changelog-1.0" author="admin">
        <createTable tableName="course">
            <column name = "id" type="int">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="courseName" type="varchar(255)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="creditHour" type="varchar(255)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id ="changelog-1.1" author="admin">
            <renameColumn tableName="course" newColumnName="name" oldColumnName="courseName"/>
            <renameColumn tableName="course" newColumnName="credit_hour" oldColumnName="creditHour"/>
    </changeSet>
    <changeSet id="changelog-1.2" author="admin">
        <addAutoIncrement tableName="course" columnName="id"/>
    </changeSet>

    <changeSet id="changelog-1.3" author="admin">
        <modifyDataType tableName="course" columnName="credit_hour" newDataType="int"/>
    </changeSet>
    <changeSet id="changelog-1.4" author="admin">
        <renameColumn tableName="student" oldColumnName="id" newColumnName="student_id"/>
        <renameColumn tableName="course" oldColumnName="id" newColumnName="course_id"/>
    </changeSet>
    <changeSet id = "changelog-1.5" author="admin">
        <createTable tableName="student_course">
            <column name="id" type="int" autoIncrement="true">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="stud_id" type="int">
                <constraints foreignKeyName="stud_id" references="student(student_id)" />
            </column>
            <column name="cour_id" type="int">
                <constraints foreignKeyName="cour_id" references="course(course_id)" />
            </column>
        </createTable>
    </changeSet>



</databaseChangeLog>